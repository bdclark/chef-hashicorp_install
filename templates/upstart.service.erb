description "<%= @name %>"

start on runlevel [2345]
stop on runlevel [!2345]

respawn
respawn limit 10 5
umask 022
<%- @environment.each do |key, val| -%>
env <%= key %>="<%= val %>"
<%- end -%>
setuid <%= @user %>
kill signal <%= @stop_signal %>
reload signal <%= @reload_signal %>
exec <%= @command %>
